<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background image -->
    <item>
        <bitmap
            android:src="@drawable/sky"
            android:gravity="center" />
    </item>

    <!-- Gradient overlay -->
    <item>
        <shape>
            <gradient
                android:startColor="#00000000"
            android:endColor="#161C2A"
            android:angle="90" />
        </shape>
    </item>

</layer-list>
